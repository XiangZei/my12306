<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    tools:context="edu.neu.my12306.activity.RegisterActivity">

    <RelativeLayout
        android:id="@+id/aaaa"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/title_bg">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="注册"
            android:textColor="#ffff"
            android:textSize="16sp" />
    </RelativeLayout>

    <!--android:background="@drawable/main_bg"-->
    <!--android:paddingBottom="@dimen/activity_vertical_margin"-->
    <!--android:paddingLeft="@dimen/activity_horizontal_margin"-->
    <!--android:paddingRight="@dimen/activity_horizontal_margin"-->
    <!--android:paddingTop="@dimen/activity_vertical_margin"-->
    <ScrollView
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:layout_below="@id/aaaa"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="70dp"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <!--android:background="@drawable/reg_bg"-->

            <EditText
                android:id="@+id/regist_username"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#0000"
                android:ems="10"
                android:hint="用户名"
                android:padding="14dp" />

            <ImageView
                android:id="@+id/image1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                />
            <!--android:src="@drawable/reg_list_line"-->

            <EditText
                android:id="@+id/regist_pwd1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#0000"
                android:ems="10"
                android:hint="密码"
                android:inputType="textPassword"
                android:padding="14dp" >

                <requestFocus />
            </EditText>

            <ImageView
                android:id="@+id/Image2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                />
            <!--android:src="@drawable/reg_list_line"-->
            <EditText
                android:id="@+id/regist_pwd2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#0000"
                android:ems="10"
                android:hint="确认密码"
                android:inputType="textPassword"
                android:padding="14dp" />

            <ImageView
                android:id="@+id/Image3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:scaleType="centerCrop"
                />
            <!--android:src="@drawable/reg_list_line"-->
            <EditText
                android:id="@+id/regist_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#0000"
                android:ems="10"
                android:hint="真实姓名"
                android:padding="14dp" />

            <ImageView
                android:id="@+id/Image4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:scaleType="centerCrop"
                />
            <!--android:src="@drawable/reg_list_line"-->
            <EditText
                android:id="@+id/regist_phoneNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#0000"
                android:ems="11"
                android:hint="用户电话"
                android:inputType="phone"
                android:padding="14dp" />

            <ImageView
                android:id="@+id/Image5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:scaleType="centerCrop"
                />
            <!--android:src="@drawable/reg_list_line"-->
            <EditText
                android:editable="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#0000"
                android:ems="10"
                android:text="证件类型"
                android:textColor="#000"
                android:inputType="textEmailAddress"
                android:padding="14dp" />

            <ImageView
                android:id="@+id/Image6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:scaleType="centerCrop"
                />
            <!--android:src="@drawable/reg_list_line"-->
            <Spinner
                android:id="@+id/regist_certificateType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/certificateType_choice"
                android:padding="14dp" />
            <!--android:background="@drawable/reg_spinner_bg"-->
            <ImageView
                android:id="@+id/Image7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:scaleType="centerCrop"
                />
            <!--android:src="@drawable/reg_list_line"-->
            <EditText
                android:id="@+id/regist_certificateNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#0000"
                android:ems="18"
                android:inputType="number"
                android:hint="证件号码"
                android:padding="14dp" />

        </LinearLayout>
    </ScrollView>
    <Button
        android:id="@+id/regist_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:text="注册"
        android:textColor="#000"
        android:textSize="22sp" />
    <!--android:background="@drawable/reg_bt"-->
</RelativeLayout>